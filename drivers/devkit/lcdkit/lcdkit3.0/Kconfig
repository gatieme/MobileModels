#
# lcdkit hisi driver configuration
#

menuconfig LCD_KIT_DRIVER
	bool "lcd kit 3.0 driver"
	default n
	help
	    If you say yes here you get support for lcd kit driver.

menuconfig LCD_KIT_DEBUG
	bool "lcd kit 3.0 debug"
	default n
	help
	    If you say yes here you get support for lcd kit debug.

menuconfig LCD_DBV_MAP_OHOS
	bool "lcd dbv map ohos"
	default n
	help
		If you say yes here you get support for lcd dbv map.

source "drivers/devkit/lcdkit/lcdkit3.0/kernel/common/src/Kconfig"
source "drivers/devkit/lcdkit/lcdkit3.0/kernel/hisi/src/Kconfig"
source "drivers/devkit/lcdkit/lcdkit3.0/kernel/hisi/adapt/Kconfig"
source "drivers/devkit/lcdkit/lcdkit3.0/kernel/mtk/src/Kconfig"
source "drivers/devkit/lcdkit/lcdkit3.0/kernel/mtk/adapt/Kconfig"
source "drivers/devkit/lcdkit/lcdkit3.0/kernel/qcom/src/Kconfig"
source "drivers/devkit/lcdkit/lcdkit3.0/kernel/qcom/adapt/Kconfig"

