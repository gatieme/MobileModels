ifeq ($(TARGET_BOARD_PLATFORM), hi6250)
EXTRA_CFLAGS += -DDDR_HI6250_PLATFORM
endif
ifeq ($(TARGET_BOARD_PLATFORM), hi3650)
EXTRA_CFLAGS += -DDDR_HI3650_PLATFORM
endif
ifeq ($(TARGET_BOARD_PLATFORM), hi3660)
EXTRA_CFLAGS += -DDDR_HI3660_PLATFORM
endif
ifeq ($(TARGET_BOARD_PLATFORM), charlotte)
EXTRA_CFLAGS += -DDDR_CHARLOTTE_PLATFORM
endif
ifeq ($(TARGET_VERSION_MODE), factory)
EXTRA_CFLAGS += -DDDR_ANONYMOUS_FACTORY
endif
ifeq ($(TARGET_BOARD_PLATFORM), burbank)
EXTRA_CFLAGS += -DDDR_BURBANK_PLATFORM
endif
