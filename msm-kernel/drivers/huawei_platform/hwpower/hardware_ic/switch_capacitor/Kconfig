# huawei switch capacitor for direct charge drivers
#

config SCHARGER_V600
	bool "scharger_v600_for_direct_charge"
	depends on SWITCHCAP
	default n
	help
	  Say Y here to enable scharge_v600 driver.
	  scharge_v600 is a fixed ratio high voltage high power switched capacitor
	  and low voltage loadswtich ic.

config QPLAT_CHARGER
	bool "qplat_charger_for_direct_charge"
	depends on SWITCHCAP
	default n
	help
	  Say Y here to enable qcom_platform_charger driver.
	  This driver is used to apply the Qcom's buck charger as aux SC.
