#
# Kirin PCIe driver platform configuration
#
config HIPCIE_IDLE
	tristate "HiPCIe IDLE"
	depends on HIPCIE_CORE
	help
	  Say Y here to enable PCIe Idle support on Kirin Soc.

config HIPCIE_OCT
	tristate "HiPCIe controller-Oct"
	select HIPCIE_CORE
	select HIPCIE_CTRL
	select HIPCIE_PHY

config HIPCIE_NSV
	tristate "HiPCIe controller-Nsv"
	select HIPCIE_CORE
	select HIPCIE_CTRL
	select HIPCIE_PHY
